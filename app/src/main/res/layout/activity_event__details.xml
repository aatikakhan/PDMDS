<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/event_detail"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/background_color1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:orientation="vertical"
        >
        <TextView
            android:text="Event Details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/caldroid_555"
            android:textSize="30sp"
            android:padding="20dp"
            android:layout_marginBottom="20dp"
            android:textColor="@color/white"
            android:id="@+id/save" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp"
            >

            <TextView
                android:id="@+id/lbl_BookingDate"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:background="#FF4081"
                android:text="Event Date"
                android:textSize="20sp" />

            <TextView 	android:id="@+id/edit_bookDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Event Date"
                android:textSize="20sp"

                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp"
            >

            <TextView
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:background="#FF4081"
                android:text="Event Name"
                android:textSize="20sp" />

            <TextView 	android:id="@+id/editName"
                android:layout_width="match_parent"
                android:textSize="20sp"
                android:layout_height="wrap_content"
                android:hint="Name"

                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp"
            >

            <TextView
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:background="#FF4081"
                android:text="Description"
                android:textSize="20sp" />

            <TextView 	android:id="@+id/editDescript"
                android:layout_width="match_parent"
                android:textSize="20sp"
                android:layout_height="wrap_content"
                android:hint="Description"

                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp"
            >

            <TextView
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:background="#FF4081"
                android:text="Place"
                android:textSize="20sp" />

            <TextView 	android:id="@+id/place"
                android:layout_width="match_parent"
                android:textSize="20sp"
                android:layout_height="wrap_content"
                android:hint="Place"  />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp"
            >

            <TextView
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:background="#FF4081"
                android:text="Time"
                android:textSize="20sp" />

            <TextView 	android:id="@+id/time"
                android:layout_width="match_parent"
                android:textSize="20sp"
                android:layout_height="wrap_content"
                android:hint="Time"

                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp"
            >

            <TextView
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:background="#FF4081"
                android:text="Website"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/website"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:autoLink="web"
                android:hint="Website"

                android:textSize="20sp" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp"
            >

            <TextView
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:background="#FF4081"
                android:text="Weblink"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/weblink"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:autoLink="web"
                android:hint="Weblink"

                android:textSize="20sp" />

        </LinearLayout>



    </LinearLayout>

</RelativeLayout>
